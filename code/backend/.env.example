# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to git

# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/syncro_db

# JWT Secret Key — use any long random string
SECRET_KEY=replace_with_a_long_random_secret_key_here

# Cloudinary (for image uploads) — optional, get from cloudinary.com
CLOUDINARY_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
